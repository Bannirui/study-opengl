{
  "version": 3,

  "configurePresets": [
    {
      "hidden": true,
      "name": "base",
      "generator": "Ninja",
      "cacheVariables": {
      }
    },

    {
      "name": "linux-gcc-debug",
      "inherits": "base",
      "displayName": "linux-gcc-debug",
      "binaryDir": "build/linux-gcc-debug",
      "toolchainFile": "cmake/toolchains/linux-gcc.cmake",
      "environment": {
        "http_proxy": "http://127.0.0.1:7890",
        "https_proxy": "http://127.0.0.1:7890",
        "ALL_PROXY": "socks5://127.0.0.1:7890"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "FETCHCONTENT_QUIET": "OFF",
        "OPENGL_VERSION_MAJOR": "4",
        "OPENGL_VERSION_MINOR": "5"
      }
    },
    {
      "name": "mac-clang-debug",
      "inherits": "base",
      "displayName": "mac-clang-debug",
      "binaryDir": "build/mac-clang-debug",
      "environment": {
        "http_proxy": "http://127.0.0.1:7890",
        "https_proxy": "http://127.0.0.1:7890",
        "ALL_PROXY": "socks5://127.0.0.1:7890"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "FETCHCONTENT_QUIET": "OFF",
        "GL_SILENCE_DEPRECATION": "ON",
        "OPENGL_VERSION_MAJOR": "3",
        "OPENGL_VERSION_MINOR": "3"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "linux-gcc-debug",
      "configurePreset": "linux-gcc-debug"
    },
    {
      "name": "mac-clang-debug",
      "configurePreset": "mac-clang-debug"
    }
  ]
}